@page "/GetTrafficData"

@code{
    bool loading = true;
}

<h1>Traffic reports</h1>

@if (TrafficReports == null)
{
    <Skeleton Active="true" Title="true"></Skeleton>
}
else if (TrafficReports.Count == 0)
{
    <Empty Image="https://gw.alipayobjects.com/zos/antfincdn/ZHrcdLPrvN/empty.svg"
           ImageStyle='@("height: 60px")'>
        <DescriptionTemplate>
            <span>No traffic reports found</span>
        </DescriptionTemplate>
        <ChildContent>
            <Button type="@ButtonType.Primary" OnClick="@ShowModal">Create Now</Button>
        </ChildContent>
    </Empty>
}
else
{
    <button @onclick="@ShowModal" class="btn btn-primary">Create Report</button>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in TrafficReports)
            {
                <tr>
                    <td>@forecast.CreatedDate.ToShortDateString()</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}